---
import { Image } from "astro:assets";
import bezi from "../images/844a531c890f0760ec0d9d7755a04fa4.jpg";
---

<div
  class="img mx-0 my-4 h-96 w-full rounded-sm bg-white sm:w-1/2 md:w-1/3 lg:w-1/4 xl:w-1/4"
  onclick="showDialog()"
>
  <Image
    src={bezi}
    alt="Painting Preview"
    class="h-full w-full cursor-pointer rounded-sm object-cover"
  />
</div>

<div
  id="dialog"
  onclick="hideDialog()"
  class="fixed left-0 top-0 z-0 flex hidden h-screen w-screen items-center justify-center bg-black bg-opacity-100 transition-opacity duration-500"
>
  <div
    class="max-h-svh w-full rounded bg-white shadow-md sm:w-2/3 md:w-3/4 lg:w-2/3 xl:w-1/3"
  >
    <div class="gallery-container">
      <Image src={bezi} alt="Gallery Image" class="mb-4 w-full rounded" />
      <div class="gallery-content mb-4 p-2">
        <h2 class="mb-2 text-2xl font-bold">Bezi face</h2>
        <p class="text-gray-700">
          Lorem ipsum dolor sit amet, consectetur adipiscing elit...
        </p>
      </div>
    </div>
  </div>
</div>
